{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true
  },
  "include": ["./src"]
}
